{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "alwaysStrict": true,
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": false,
        "lib": [
            "es2018",
            "DOM"
        ],
        "paths": {
            "@ui": [
                "src/components/ui"
            ],
            "@ui/*": [
                "src/components/ui/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ],
            "@common/*": [
                "src/components/common/*"
            ],
            "@data/*": [
                "src/data/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@constants/*": [
                "src/constants/*"
            ],
            "@helpers/*": [
                "src/helpers/*"
            ],
            "@forms/*": [
                "src/components/forms/*"
            ],
            "@layout/*": [
                "src/components/layout/*"
            ],
            "@api/*": [
                "src/api/*"
            ],
            // "*": [
            //     "*",
            //     "src/*",
            //     "../src/*",
            //     "./src/*"
            // ]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "src",
        "./src/**/*",
        "./declaration.d.ts",
        "./src/types/declaration.d.ts",
    ],
    "exclude": [
        "node_modules",
        "__mocks__"
    ]
}