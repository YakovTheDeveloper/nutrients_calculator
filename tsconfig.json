{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": ".",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "alwaysStrict": true,
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es2018",
            "DOM"
        ],
        "paths": {
            "@ui/*": [
                "src/components/ui/*"
            ],
            "@common/*": [
                "src/components/common/*"
            ],
            "@data/*": [
                "src/data/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@constants/*": [
                "src/constants/*"
            ],
            "@helpers/*": [
                "src/helpers/*"
            ],
            "@forms/*": [
                "src/components/forms/*"
            ],
            "@api": [
                "src/api/index.ts"
            ],
        }
    },
    "include": [
        "./src/**/*",
        "./declaration.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}